# Maintainer: Alad Wenter <the.changing.side@gmail.com>
pkgname=dnscrypt-autoinstall-git
pkgver=0.3
pkgrel=1
pkgdesc="Automatic installation and configuration of DNSCrypt"
arch=('i686' 'x86_64')
url="https://github.com/simonclausen/dnscrypt-autoinstall"
license=('GPL')
groups=('network')
depends=('libsodium' 'dnscrypt-proxy' 'gnu-netcat' 'curl')
makedepends=('git')
provides=('dnscrypt-proxy')
backup=()
options=()
install=dnscrypt-autoinstall.install
source=()
noextract=()
sha256sums=('SKIP')

_gitroot='https://github.com/simonclausen/dnscrypt-autoinstall.git'
_gitname=

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
